#include <stdio.h>
#include <string.h>
#define FLAG '$'
#define ESC '&'
void charstuff(char data[])
{
    char stuffed[100];
    int i,j=0;
    stuffed[j++]=FLAG;
    for(i=0;i<strlen(data);i++)
    {
        if(data[i]==FLAG || data[i]==ESC)
        {
            stuffed[j++]=ESC;
        }
        stuffed[j++]=data[i];
    }
    stuffed[j++]=FLAG;
    stuffed[j]='\0';
    printf("Stuffed frame: %s\n",stuffed);
}
int main() 
{
    char data[200];
    printf("Enter input data: ");
    scanf("%s",data);
    charstuff(data);
    return 0;
}
